    "@types/uuid": "^3.4.3",
    "@types/winston": "^2.3.9",
    "async": "^2.5.0",
    "axios": "^0.17.1",
    "body-parser": "^1.18.2",
    "@dojot/dojot-module": "0.0.1-alpha.6",
    "@dojot/dojot-module-logger": "0.0.1-alpha.2",
    "eslint": "^4.7.2",
    "express": "^4.16.0",
    "jshint": "^2.9.5",
    "kafka-node": "^2.2.3",
    "morgan": "^1.9.0",
    "redis": "^2.8.0",
    "socket.io": "^2.0.4",
